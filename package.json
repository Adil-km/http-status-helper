{
  "name": "http-status-helper",
  "displayName": "HTTP Status Codes Helper",
  "description": "Quickly insert and view details for HTTP status codes.",
  "version": "0.1.0",
  "publisher": "adil-km",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Adil-km/http-status-helper"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:json",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onCommand:http-status-helper.showStatusCodes"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "http-status-helper.showStatusCodes",
        "title": "HTTP Status: Show All Status Codes"
      }
    ],
    "configuration": {
      "title": "HTTP Status Helper",
      "properties": {
        "http-status-helper.enableHoverTooltips": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover tooltips for HTTP status codes (e.g., 404, 200)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}